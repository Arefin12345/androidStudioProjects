<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowTo">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:fontFamily="@font/baloo"
        android:paddingLeft="10dp"
        android:text="Instructions"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="399dp"
        android:layout_height="112dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="1. Put your numbers in the boxes."
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="   Numbers must be seperated"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text='    by \",\"(ex:123,456,789) .'
        android:textColor="#000000"
        android:textSize="20dp" />




</LinearLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="184dp"
            android:src="@drawable/mainone" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="414dp"
        android:layout_height="139dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="2.Or Scan your numbers."
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="184dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/sca" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="191dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="264dp"
            android:layout_height="238dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=" 2.You can also save your"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="   numbers."
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:paddingLeft="10dp"
                android:text=" 3.Click check button to find."
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:text="    match cases."
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>


        <ImageView
            android:layout_width="103dp"
            android:layout_height="202dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/save" />


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:id="@+id/howto_navigation"
        android:background="@drawable/rounded"
        app:menu="@menu/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemTextColor="@color/navcolor"
        app:itemIconTint="@color/navcolor"/>

</androidx.constraintlayout.widget.ConstraintLayout>