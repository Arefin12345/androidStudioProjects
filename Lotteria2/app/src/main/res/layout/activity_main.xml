<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="wrap_content"
        android:layout_width="0dp"
        tools:layout_editor_absoluteY="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/lottery"
        android:rotation="-21"
        android:id="@+id/iamgeviewid"/>

    <TextView
        android:id="@+id/textViewOneId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lotterica"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/bungee_shade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iamgeviewid" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textViewTwoId"
        app:layout_constraintTop_toBottomOf="@+id/textViewOneId"
        android:textStyle="italic"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>